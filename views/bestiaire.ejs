			Humanoides.style.display = "none";
			Button_Humanoides.src="images/bestiary/Expand.png";
		} else {
			Humanoides.style.display = "block";
			Button_Humanoides.src="images/bestiary/Mask.png";
		}
	};

	Button_Humanoides.onclick = MaskExpandHumanoides;

	let Button_Fongoides = document.getElementById("Button_Fongoides");
	let Fongoides = document.getElementById("Fongoides");

	function MaskExpandFongoides(){
		if(getComputedStyle(Fongoides).display != "none"){
			Fongoides.style.display = "none";
			Button_Fongoides.src="images/bestiary/Expand.png";
		} else {
			Fongoides.style.display = "block";
			Button_Fongoides.src="images/bestiary/Mask.png";
		}
	};

	Button_Fongoides.onclick = MaskExpandFongoides;

	let Button_Unite = document.getElementById("Button_Unite");
	let Unite = document.getElementById("Unite");

	function MaskExpandUnite(){
		if(getComputedStyle(Unite).display != "none"){
