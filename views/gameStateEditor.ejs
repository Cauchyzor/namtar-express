<!--HEAD -->
<%- include('head'); -%>

    <!-- BODY -->
    <script src="http://code.jquery.com/jquery-3.1.0.min.js"></script>
    <link href="\stylesheets\timeline.css" rel="stylesheet">

    <body class="code-snippets-visible">
        <div class="container">
            
            <%- include('header'); -%>
            <%- include('navbar'); -%>

            <div class="docs-section row">
                <h1 class="docs-header">State edition : <%= state.title %> </h1>
            </div>
            <div class="docs-section row">
                <form method="post" action="/game/stateEditor">
                    <input type="hidden" name="stateId" value="<%= state._id %>" readonly>
                    <label>Titre</label>
                    <input type="text" name="stateTitle" value="<%= state.title %>">
                    <label>Contenu</label>
                    <textarea name="stateContent" class="u-full-width" style="height: 50%;"><%= state.body %></textarea>
                    <input type="submit" value="Valider"> 
                </form>
            </div>

        </div>
    </body>